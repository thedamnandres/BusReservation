@model BusReservation.Models.Reserva
<link rel="stylesheet" href="~/css/createmod.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/andres.css" asp-append-version="true" />

@{
ViewData["Title"] = "Delete Reserva";
}

<div class="container text-center">
    <h1>ELIMINAR RESERVA</h1>
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-lg text-white">Cliente</label>
                <div class="col-sm-10">
                    <p class="form-control-static text-white form-control-lg">@Model.Cliente.Apellido</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-lg text-white">Ruta</label>
                <div class="col-sm-10">
                    <p class="form-control-static text-white form-control-lg">@Model.Ruta.Destino</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-lg text-white">Fecha</label>
                <div class="col-sm-10">
                    <p class="form-control-static text-white form-control-lg">@Model.FechaReserva</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-lg text-white">Asiento</label>
                <div class="col-sm-10">
                    <p class="form-control-static text-white form-control-lg">@Model.Asiento</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-lg text-white">Estado</label>
                <div class="col-sm-10">
                    <input type="checkbox" disabled class="form-check-input" @(Model.EstadoReserva ? "checked" : "") />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-lg text-white">Pago</label>
                <div class="col-sm-10">
                    <p class="form-control-static text-white form-control-lg">@Model.MetodoPago</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-lg text-white">Precio</label>
                <div class="col-sm-10">
                    <p class="form-control-static text-white form-control-lg">@Model.Precio</p>
                </div>
            </div>
            <form asp-action="Delete">
                <div class="row mt-3">
                    <div class="col-md-6">
                        <input type="submit" value="Eliminar" class="btn btn-danger w-100" />
                    </div>
                    <div class="col-md-6 text-end">
                        <a asp-action="Index" class="btn btn-secondary w-100">Regresar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
