@model BusReservation.Models.Ruta
<link rel="stylesheet" href="~/css/createmod.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/andres.css" asp-append-version="true" />
@{
ViewData["Title"] = "Details Ruta";
}

<div class="container text-center">
    <h1>DETALLES DE LA RUTA</h1>
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-lg text-white">Origen</label>
                <div class="col-sm-10">
                    <p class="form-control-static text-white form-control-lg">@Model.Origen</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-lg text-white">Destino</label>
                <div class="col-sm-10">
                    <p class="form-control-static text-white form-control-lg">@Model.Destino</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-lg text-white">Duración</label>
                <div class="col-sm-10">
                    <p class="form-control-static text-white form-control-lg">@Model.Duracion</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-lg text-white">Salida</label>
                <div class="col-sm-10">
                    <p class="form-control-static text-white form-control-lg">@Model.FechaSalida</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-lg text-white">Hora</label>
                <div class="col-sm-10">
                    <p class="form-control-static text-white form-control-lg">@Model.Hora</p>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6">
                    <a asp-action="Edit" asp-route-id="@Model.RutaId" class="btn btn-secondary w-100">Editar</a>
                </div>
                <div class="col-md-6 text-end">
                    <a asp-action="Index" class="btn btn-primary w-100">Regresar</a>
                </div>
            </div>
        </div>
    </div>
</div>