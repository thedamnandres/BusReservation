@model BusReservation.Models.Ruta
<link rel="stylesheet" href="~/css/createmod.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/andres.css" asp-append-version="true" />

@{
ViewData["Title"] = "Edit Ruta";
}

<div class="container text-center">
    <h1>EDITAR RUTA</h1>
    <div class="row mt-3">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RutaId" />
                
                <div class="form-group row">
                    <label asp-for="Origen" class="col-sm-2 col-form-label col-form-label-lg text-white"></label>
                    <div class="col-sm-10">
                        <input asp-for="Origen" class="form-control form-control-lg"/>
                        <span asp-validation-for="Origen" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Destino" class="col-sm-2 col-form-label col-form-label-lg text-white"></label>
                    <div class="col-sm-10">
                        <input asp-for="Destino" class="form-control form-control-lg"/>
                        <span asp-validation-for="Destino" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Duracion" class="col-sm-2 col-form-label col-form-label-lg text-white"></label>
                    <div class="col-sm-10">
                        <input asp-for="Duracion" class="form-control form-control-lg"/>
                        <span asp-validation-for="Duracion" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label col-form-label-lg text-white">Salida</label>
                    <div class="col-sm-10">
                        <input asp-for="FechaSalida" class="form-control form-control-lg"/>
                        <span asp-validation-for="FechaSalida" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Hora" class="col-sm-2 col-form-label col-form-label-lg text-white"></label>
                    <div class="col-sm-10">
                        <input asp-for="Hora" class="form-control form-control-lg"/>
                        <span asp-validation-for="Hora" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">
                        <input type="submit" value="Guardar" class="btn btn-primary w-100"/>
                    </div>
                    <div class="col-md-6 text-end">
                        <a asp-action="Index" class="btn btn-secondary w-100">Regresar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}