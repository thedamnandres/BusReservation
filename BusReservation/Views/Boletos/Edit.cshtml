@model BusReservation.Models.Boleto
<link rel="stylesheet" href="~/css/createmod.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/andres.css" asp-append-version="true" />
@{
ViewData["Title"] = "Edit Boleto";
}

<div class="container text-center">
    <h1>EDITAR BOLETO</h1>
    <div class="row mt-3">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div class="form-group row">
                    <label asp-for="ReservaId" class="col-sm-2 col-form-label col-form-label-lg text-white"></label>
                    <div class="col-sm-10">
                        <select asp-for="ReservaId" class="form-control form-control-lg" asp-items="ViewBag.ReservaId"></select>
                        <span asp-validation-for="ReservaId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Detalles" class="col-sm-2 col-form-label col-form-label-lg text-white"></label>
                    <div class="col-sm-10">
                        <input asp-for="Detalles" class="form-control form-control-lg" />
                        <span asp-validation-for="Detalles" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="CodigoQR" class="col-sm-2 col-form-label col-form-label-lg text-white"></label>
                    <div class="col-sm-10">
                        <input asp-for="CodigoQR" class="form-control form-control-lg" />
                        <span asp-validation-for="CodigoQR" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="FechaEmision" class="col-sm-2 col-form-label col-form-label-lg text-white"></label>
                    <div class="col-sm-10">
                        <input asp-for="FechaEmision" class="form-control form-control-lg" />
                        <span asp-validation-for="FechaEmision" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">
                        <input type="submit" value="Guardar" class="btn btn-primary w-100" />
                    </div>
                    <div class="col-md-6 text-end">
                        <a asp-action="Index" class="btn btn-secondary w-100">Regresar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>