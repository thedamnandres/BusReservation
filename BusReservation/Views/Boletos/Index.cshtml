@model IEnumerable<BusReservation.Models.Boleto>
<link rel="stylesheet" href="~/css/paul.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center text-nowrap mb-3 mt-3">Tenemos tus <br> horarios de bus</h1>
<div class="text-center mt-4">
    <a asp-action="Create" class="btn btn-primary btn-lg">Crear Boletos</a>
</div>


<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayName("Reserva Id")</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Detalles)</th>
            <th>@Html.DisplayName("QR")</th>
            <th>@Html.DisplayName("Fecha de Emision")</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Reserva.ReservaId)</td>
                <td>@Html.DisplayFor(modelItem => item.Detalles)</td>
                <td>@Html.DisplayFor(modelItem => item.CodigoQR)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaEmision)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BoletoId" class="btn btn-secondary btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.BoletoId" class="btn btn-success btn-sm mx-1">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.BoletoId" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

