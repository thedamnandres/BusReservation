@model BusReservation.Models.Boleto
<link rel="stylesheet" href="~/css/createmod.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/andres.css" asp-append-version="true" />
@{
ViewData["Title"] = "Details Boleto";
}

<div class="container text-center">
    <h1>DETALLES DEL BOLETO</h1>
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-lg text-white">Reserva</label>
                <div class="col-sm-10">
                    <p class="form-control-static text-white form-control-lg">@Model.Reserva.Asiento</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-lg text-white">Detalles</label>
                <div class="col-sm-10">
                    <p class="form-control-static text-white form-control-lg">@Model.Detalles</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-lg text-white">Código QR</label>
                <div class="col-sm-10">
                    <p class="form-control-static text-white form-control-lg">@Model.CodigoQR</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-lg text-white">Fecha de Emisión</label>
                <div class="col-sm-10">
                    <p class="form-control-static text-white form-control-lg">@Model.FechaEmision</p>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6">
                    <a asp-action="Edit" asp-route-id="@Model.BoletoId" class="btn btn-secondary w-100">Editar</a>
                </div>
                <div class="col-md-6 text-end">
                    <a asp-action="Index" class="btn btn-primary w-100">Regresar</a>
                </div>
            </div>
        </div>
    </div>
</div>