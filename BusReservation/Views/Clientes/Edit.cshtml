@model BusReservation.Models.Cliente
<link rel="stylesheet" href="~/css/createmod.css" asp-append-version="true" />
@{
ViewData["Title"] = "Edit";
}

<div class="container text-center">
    <h1>EDITAR DATOS</h1>
    <div class="row mt-3">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row">
                    <label asp-for="Nombre" class="col-sm-2 col-form-label col-form-label-lg text-white"></label>
                    <div class="col-sm-10">
                        <input asp-for="Nombre" class="form-control form-control-lg" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Apellido" class="col-sm-2 col-form-label col-form-label-lg text-white"></label>
                    <div class="col-sm-10">
                        <input asp-for="Apellido" class="form-control form-control-lg" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-2 col-form-label col-form-label-lg text-white"></label>
                    <div class="col-sm-10">
                        <input asp-for="Email" class="form-control form-control-lg" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Telefono" class="col-sm-2 col-form-label col-form-label-lg text-white"></label>
                    <div class="col-sm-10">
                        <input asp-for="Telefono" class="form-control form-control-lg" />
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <input type="submit" value="Guardar" class="btn btn-primary w-100" />
                    </div>
                    <div class="col-md-6 text-end">
                        <a asp-action="Index" class="btn btn-secondary w-100">Regresar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}