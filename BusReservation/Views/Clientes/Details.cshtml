@model BusReservation.Models.Cliente
<link rel="stylesheet" href="~/css/createmod.css" asp-append-version="true" />
@{
ViewData["Title"] = "Details";
}

<div class="container text-center">
    <h1>DETALLES DEL CLIENTE</h1>
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-lg text-white">Nombre</label>
                <div class="col-sm-10">
                    <p class="form-control-static text-white form-control-lg">@Model.Nombre</p>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-lg text-white">Apellido</label>
                <div class="col-sm-10">
                    <p class="form-control-static text-white form-control-lg">@Model.Apellido</p>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-lg text-white">Email</label>
                <div class="col-sm-10">
                    <p class="form-control-static text-white form-control-lg">@Model.Email</p>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-lg text-white">Teléfono</label>
                <div class="col-sm-10">
                    <p class="form-control-static text-white form-control-lg">@Model.Telefono</p>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6">
                    <a asp-action="Edit" asp-route-id="@Model.ClienteId" class="btn btn-primary w-100">Editar</a>
                </div>
                <div class="col-md-6 text-end">
                    <a asp-action="Index" class="btn btn-secondary w-100">Regresar</a>
                </div>
            </div>
        </div>
    </div>
</div>